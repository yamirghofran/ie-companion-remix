// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Professor {
  id        Int               @id @default(autoincrement())
  name      String
  email     String
  bio       String?
  courses   ProfessorCourse[]
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  reviews   Review[]
}

model Course {
  id          Int               @id @default(autoincrement())
  name        String
  description String?
  professors  ProfessorCourse[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  reviews     Review[]
}

model ProfessorCourse {
  professor   Professor @relation(fields: [professorId], references: [id])
  professorId Int
  course      Course    @relation(fields: [courseId], references: [id])
  courseId    Int
  assignedAt  DateTime  @default(now())

  @@id([professorId, courseId])
}

model Review {
  id          Int       @id @default(autoincrement())
  rating      Int
  comment     String
  course      Course    @relation(fields: [courseId], references: [id])
  courseId    Int
  professor   Professor @relation(fields: [professorId], references: [id])
  professorId Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Resource {
  id          Int             @id @default(autoincrement())
  name        String
  description String?
  content     String?
  type        String?
  items       ResourceItem[] @relation("ResourceItem")
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model ResourceItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  url         String?
  type        String?
  resource    Resource @relation("ResourceItem", fields: [resourceId], references: [id])
  resourceId  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}